 // 사용자가 입력한 정수가
// 짝수면 true
// 홀수면 false를 출력해보세요.

import java.util.Scanner;

public class EvenOdd {
	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		System.out.print("값을 입력하세요. : ");
		int a = scan.nextInt();
		int b = a%2;
		
		boolean result = (b == 0);
		System.out.print ("입력하신 숫자는 짝수인가요? " + result);
	}
}